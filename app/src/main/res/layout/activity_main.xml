<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.austinegwa64.medicinealert.AddMedication">

    <ImageView
        android:id="@+id/medImage"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:layout_weight="2"
        android:src="@drawable/medic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#9286ce"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            style="@style/editTxt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="text"
            android:hint="Medicine Name" />

        <EditText
            android:id="@+id/desc"
            style="@style/editTxt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="text"
            android:hint="Medicine Description" />

        <Spinner
            android:id="@+id/prescription"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:entries="@array/prescription"
            style="@style/editTxt" />

        <EditText
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            style="@style/editTxt"
            android:ems="10"
            android:hint="start date"
            android:inputType="date" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            style="@style/editTxt"
            android:text="save" />

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f70112" />
    </LinearLayout>




</LinearLayout>
